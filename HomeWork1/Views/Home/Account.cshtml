@model  IEnumerable<HomeWork1.Models.ViewModels.AccountViewModel>
@{
    Layout = null;
}
<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered table-hover">
            <tr>
                <th>#</th>
                <th>類別</th>
                <th>日期</th>
                <th>金額</th>
            </tr>
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Idx</td>
                        <td>@item.Category</td>
                        <td>@item.LogDate.ToString("yyyy-MM-dd")</td>
                        <td>@item.Money.ToString("#,0")</td>
                    </tr>
                }

            }

